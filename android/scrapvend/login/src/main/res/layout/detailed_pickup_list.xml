<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/LightGrey">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="65dp"
                android:layout_height="60dp"
                android:src="@drawable/image_1"
                app:civ_border_color="#000000"
                app:civ_border_width="2dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="8"
                app:civ_shadow_color="#000000"/>


            <TextView
                android:id="@+id/textViewHeading"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:accessibilityHeading="true"
                android:text="FULL VIEW"
                android:textSize="25dp"
                android:textColor="@color/DimGray"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewA"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:accessibilityHeading="true"
                android:text="Name"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="abc"
                android:textSize="20dp"
                android:textStyle="italic"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textViewB"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Address \n "
                android:textSize="20dp"
                android:textStyle="bold"

                />
            <TextView
                android:id="@+id/textAddress"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="agra \n hello"
                android:textSize="20dp"
                android:textStyle="italic" />

            <ImageButton
                android:id="@+id/mapButton"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="#000"
                android:src="@drawable/image1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewC"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Contact_no"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textContact"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="46165"
                android:textSize="20dp"
                android:textStyle="italic"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textViewD"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Booking_id"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textbookingid"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="123"
                android:textSize="20dp"
                android:textStyle="italic"
                />
        </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal">
             <TextView
                 android:id="@+id/textViewE"
                 android:layout_width="180dp"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                 android:text="Scheduled Pickup date"
                 android:textSize="20dp"
                 android:textStyle="bold" />
             <TextView
                 android:id="@+id/textDate"
                 android:layout_width="200dp"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                 android:textSize="20dp"
                 android:textStyle="italic"
                 />
         </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewF"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Scheduled Pickup time"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textTime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:textStyle="italic"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewG"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Pickup date"
                android:textSize="20dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editPickupDate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textStyle="italic"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textViewH"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Pickup time"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editPickupTime"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/textViewI"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Pickup Status"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="20"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="97dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewJ"
                android:layout_width="180dp"
                android:layout_height="288dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Total amount"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="00"
                android:textSize="20dp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/buttonEdit"
                android:layout_width="70dp"
                android:layout_height="40dp"

                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimary"
                android:text="Edit"
                android:textSize="20dp" />


        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/buttonUpdate"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="130dp"
                    android:background="@color/colorPrimary"
                    android:text="Update"
                    android:textSize="25dp" />
            </LinearLayout>

        </LinearLayout>
</ScrollView>